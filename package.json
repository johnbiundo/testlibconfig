{
  "name": "@nestjsplus/lib-starter",
  "version": "1.0.6",
  "description": "Flexible, Docker-friendly, Dotenv-based Configuration Module for NestJs",
  "author": "John Biundo <johnfbiundo@gmail.com>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "keywords": [
    "nestjs",
    "configuration",
    "config",
    "module",
    "environment",
    "variables",
    "env",
    ".env",
    "settings"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nestjsplus/config"
  },
  "bugs": "https://github.com/nestjsplus/config/issues",
  "main": "dist/test.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf ./dist && npm run build:lib && npm run build:schematics",
    "build:lib": "tsc -p tsconfig.json",
    "build:schematics": "tsc -p tsconfig.schematics.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:debug": "export DEBUG=cfg,trace; jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@angular-devkit/schematics": "8.3.6",
    "@hapi/joi": "^15.1.0",
    "@nestjsplus/schematics-utils": "^1.0.1",
    "@schematics/angular": "8.3.6",
    "@types/hapi__joi": "^15.0.2",
    "cli-color": "^1.4.0",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^6.0.0"
  },
  "schematics": "./schematics/collection.json",
  "devDependencies": {
    "@nestjs/common": "^6.4.1",
    "@nestjs/core": "^6.4.1",
    "@nestjs/testing": "^6.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "24.0.13",
    "@types/node": "^10.14.12",
    "concurrently": "^4.1.0",
    "jest": "24.8.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
